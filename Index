    <script>
        lucide.createIcons();

        function abrirVerificacao() {
            document.getElementById('modal-verificacao').classList.remove('hidden');
            setTimeout(() => {
                fecharVerificacao();
                alert("Identidade Validada e Registro de Presença Concluído.");
            }, 2000);
        }

        function fecharVerificacao() {
            document.getElementById('modal-verificacao').classList.add('hidden');
        }
    </script>
